    <!-- Row 1: India time, spanning all 4 columns -->
    <TextView
        android:id="@+id/day_india"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Saturday"
        android:textColor="@color/teal_200"
        android:textSize="32sp"
        android:gravity="left|bottom"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_india"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="22 DEC"
        android:textColor="@color/teal_200"
        android:textSize="32sp"
        android:gravity="left|bottom"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_india"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:text="00:00"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="60sp"
        android:gravity="right|bottom"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:background="?android:attr/textColorPrimary"
       />

    <TextView
        android:id="@+id/label_time_singapore"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="SNG"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/time_singapore"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="00:00"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_time_london"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="LDN"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/time_london"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="00:00"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_time_zurich"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="ZUR"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/time_zurich"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="00:00"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/label_time_chicago"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text="CST"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/time_chicago"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text="00:00"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold" />



</GridLayout>